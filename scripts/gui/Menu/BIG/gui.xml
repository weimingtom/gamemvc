<container name="top" width="1024" height="768">

	<dropdown name="dp" x="200" y="350">
		<li>Hierba</li>
		<li>Desierto</li>
		<li>Agua</li>
	</dropdown>

	<button name="optbutton" x="350" y="350" caption="Opciones"
		eventId="b1" />


	<window name="opt" x="340" y="340" visible="false" focusable="true"
		caption="Opciones">

		<adjust name="q1" columns="1" align="CENTER" vertical="5">

			<adjust name="q2" columns="2" align="CENTER,CENTER"
				horizontal="10" padding="5,5,5,5">

				<container name="q3" width="100" height="44">

					<dropdown name="optres">
						<li>SMALL</li>
						<li>MEDIUM</li>
						<li>BIG</li>
					</dropdown>

				</container>
				
				<checkbox name="full" caption="Full Screen">
				</checkbox>

			</adjust>

			<adjust name="adj" columns="2" align="CENTER,CENTER"
				horizontal="10" padding="5,5,5,5">

				<button name="Ok" caption="Ok" eventId="Ok" width="80" />
				<button name="Cancel" caption="Cancel" eventId="Cancel"
					width="80" />

			</adjust>

		</adjust>


	</window>

</container>
